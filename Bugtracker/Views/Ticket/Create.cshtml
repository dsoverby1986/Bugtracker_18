                @Html.ValidationMessageFor(model => model.Ticket.AssignedUserId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketPriorities, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Ticket.TicketPriorityId, Model.TicketPriorities, htmlAttributes: new { @class = "form-control" })
