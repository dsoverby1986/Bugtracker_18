                @Html.DropDownListFor(model => model.Ticket.ProjectId, Model.Projects, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Ticket.ProjectId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.AssignedToUsers, htmlAttributes: new { @class = "control-label col-md-2" })
