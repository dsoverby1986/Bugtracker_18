            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.TicketStatuses, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Ticket.TicketStatusId, Model.TicketStatuses, htmlAttributes: new { @class = "form-control" })
